# Server Configuration
PORT=5001
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/mern-app

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
ACCESS_TOKEN_EXPIRE=1h
REFRESH_TOKEN_EXPIRE=7d

# CORS Configuration
CLIENT_URL=http://localhost:5173

# Security (for production)
# SESSION_SECRET=your_session_secret_here
# COOKIE_SECRET=your_cookie_secret_here

# Optional: Google OAuth (if implementing Google login)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Optional: Email service (for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@arbitrage.com

# Optional: Rate limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Cloudinary Configuration (for profile pictures)
# Option 1: Use CLOUDINARY_URL (recommended)
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Option 2: Individual variables (alternative)
# CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional third-party API keys for data fallbacks
# Get a free key from https://min-api.cryptocompare.com/ for higher rate limits
CRYPTOCOMPARE_API_KEY=
# Etherscan API key for gas oracle fallback
ETHERSCAN_API_KEY=
